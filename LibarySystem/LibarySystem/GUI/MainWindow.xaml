<Window x:Class="LibarySystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibarySystem"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="bntLogin" Content="Login" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" RenderTransformOrigin="5.947,11.65" Margin="50,255,0,0" Click="BntLogin_Click"/>
        <Label Content="Username:" HorizontalAlignment="Left" Margin="50,83,0,0" VerticalAlignment="Top"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="50,126,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUsername" Text="s.gasser" HorizontalAlignment="Left" Height="23" Margin="131,87,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="131,129,0,0" VerticalAlignment="Top" Height="23" Width="160" KeyDown="OnKeyDownHandler" Password="password"/>

    </Grid>
</Window>
